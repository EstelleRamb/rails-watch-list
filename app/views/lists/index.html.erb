
<p style="color: green"><%= notice %></p>


<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(list.photo.key) if list.photo.attached? %>)">

      <p><%= link_to list.name, list %></p>
    </div>
  <% end %>
</div>

