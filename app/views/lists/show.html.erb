<%# --------------  Banner for each list ----------------- %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key if @list.photo.attached? %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<%# --------------  Banner for each list ----------------- %>
<div class="container">
  <a><%= link_to "Back", root_path, class:"button btn btn-dark mt-4"%></a>
  <a><%= link_to 'Add movie', new_list_bookmark_path(@list), class:"button-add btn btn-dark mt-4"%></a>
  <div class="films">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card p-2 mt-4 position-relative rounded">
        <img src="<%= bookmark.movie.poster_url %>" class="films-category" alt="...">
        <div class="p-3">
          <h5><strong><%= bookmark.movie.title %></strong></h5>
          <p>(<%= bookmark.movie.year %>) <%= bookmark.movie.director %></p>
          <p class="overview"><%= bookmark.movie.overview %></p>
          <span class="position-absolute bottom-0 end-0"><%= bookmark.comment %></span>
          <div>
            <a><%= link_to 'x', bookmark_path(bookmark),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"delete position-absolute top-0 end-0"%></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
