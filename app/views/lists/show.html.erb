<div class="container">
  <a><%= link_to 'Add movie', new_list_bookmark_path(@list), class:"delete btn btn-dark mt-4"%></a>
  <a><%= link_to "Back to lists", root_path, class:"delete btn btn-dark mt-4"%></a>
  <div class="films">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card p-2 mt-4 position-relative rouded">
        <img src="<%= bookmark.movie.poster_url %>" class="films-category" alt="...">
        <div class="p-3">
          <h5><strong><%= bookmark.movie.title %></strong></h5>
          <p>(<%= bookmark.movie.year %>) <%= bookmark.movie.director %></p>
          <p class="overview"><%= bookmark.movie.overview %></p>
          <span class="position-absolute bottom-0 start-0"><%= bookmark.comment %></span>
          <div>
            <a><%= link_to 'X', bookmark_path(bookmark),method: :delete, class:"delete btn btn-dark position-absolute bottom-0 end-0"%></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
