
<div class="card mb-3 d-flex" style="max-width: 540px;">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%= bookmark.movie.poster_url %>" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <p class="card-text"><small class="text-muted">Rating <%= bookmark.movie.rating %></small></p>
      </div>
    </div>
  </div>
  <% end %>
</div>

   <%= link_to "Back to lists", root_path %>
